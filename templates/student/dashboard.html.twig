{% extends 'base.html.twig' %}

{% block title %}Student Dashboard{% endblock %}

{% block body %}
<h2>Welcome, {{ student.name }}</h2>

<ul>
    <li><strong>Email:</strong> {{ student.email }}</li>
    <li><strong>Date of Birth:</strong> {{ student.dob|date('Y-m-d') }}</li>
    <li><strong>Gender:</strong> {{ student.gender }}</li>
    <li><strong>Role:</strong> {{ student.role }}</li>
</ul>

<div class="mt-4 d-flex gap-3">
    <a href="{{ path('student_edit_profile') }}" class="btn btn-primary">✏️ Edit Profile</a>
    <a href="{{ path('student_change_password') }}" class="btn btn-warning">🔐 Change Password</a>
    <a href="{{ path('app_logout') }}" class="btn btn-danger ms-auto">🚪 Logout</a>
</div>

{% endblock %}
